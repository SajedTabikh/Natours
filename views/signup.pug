extends base

block content
  main.main
    .login-form
      h2.heading-secondary.ma-bt-lg Create your account!
      form.form.form--signup
        div(class="form__group")
          label(class="form__label", for="name") Your name
          input#name(class="form__input", type="text", placeholder="", required)
        div(class="form__group")
          label(class="form__label", for="email") Email address
          input#email(class="form__input", type="email", placeholder="you@example.com", required)
        div(class="form__group ma-bt-md")
          label(class="form__label", for="password") Password
          input#password(class="form__input", type="password", placeholder="••••••••", required, minlength="8")
        div(class="form__group ma-bt-md")
          label(class="form__label", for="passwordConfirm") Confirm password
          input#passwordConfirm(class="form__input", type="password", placeholder="••••••••", required, minlength="8")
        div(class="form__group")
          button.btn.btn--green Sign up